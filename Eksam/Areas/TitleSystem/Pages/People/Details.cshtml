@page
@using Aids
@using Data.TitleSystem.PersonTitles
@using Pages.Extensions
@model WebApp.Areas.TitleSystem.Pages.People.DetailsModel

@{ Layout = "_Details";
    const string persontitles = "/TitleSystem/PersonTitles";
    var personId = GetMember.Name<PersonTitleData>(x => x.PersonId); }

<body>
@Html.DisplayControlsFor(model => model.Item.Id)
@Html.DisplayControlsFor(model => model.Item.Name)
@Html.DisplayControlsFor(model => model.Item.Gender)
@Html.DisplayControlsFor(model => model.Item.Age)
@Html.DisplayControlsFor(model => model.Item.Email)

</body>

@section Details {
    @Html.HypertextLinkFor(string.Empty, new Link("Näita inimese tiitleid", $"{persontitles}/Index?fixedFilter={personId}&fixedValue={Model.Item.Id}"))
}